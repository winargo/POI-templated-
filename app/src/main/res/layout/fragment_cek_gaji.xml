<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_view"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gaji Anda"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_margin="4sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gaji Anda Bulan Ini"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_marginLeft="10sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle">

                <android.support.v7.widget.CardView
                    android:id="@+id/lyt_gajibulanini"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_xsmall"
                    android:layout_marginLeft="@dimen/spacing_xsmall"
                    android:layout_marginRight="@dimen/spacing_xsmall"
                    android:layout_marginTop="@dimen/spacing_xsmall"
                    android:layout_weight="1"
                    android:visibility="visible"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_large">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/hand_money"/>
                            <TextView
                                android:id="@+id/gajibulanini"
                                android:layout_width="0sp"
                                android:layout_weight="1"
                                android:text="testing"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textSize="10pt"
                                android:layout_height="match_parent" />

                        </LinearLayout>




                    </LinearLayout>

                </android.support.v7.widget.CardView>





            </LinearLayout>
            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gaji Anda Bulan lalu"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_marginLeft="10sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle">

                <android.support.v7.widget.CardView
                    android:id="@+id/lyt_gajibulanlalu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_xsmall"
                    android:layout_marginLeft="@dimen/spacing_xsmall"
                    android:layout_marginRight="@dimen/spacing_xsmall"
                    android:layout_marginTop="@dimen/spacing_xsmall"
                    android:layout_weight="1"
                    android:visibility="visible"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_large">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/hand_money"/>
                            <TextView
                                android:id="@+id/gajibulanlalu"
                                android:layout_width="0sp"
                                android:layout_weight="1"
                                android:text="testing"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textSize="10pt"
                                android:layout_height="match_parent" />

                        </LinearLayout>




                    </LinearLayout>

                </android.support.v7.widget.CardView>





            </LinearLayout>
        </LinearLayout>



            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cek gaji Anggota"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_margin="4sp"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/listkaryawancekgajihrd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>