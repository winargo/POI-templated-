<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4sp"
    android:layout_marginTop="6sp"
    android:layout_marginBottom="6sp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/lyt_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_margin="2sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="0sp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tanggal1"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:layout_marginTop="10sp"
                                    android:layout_marginBottom="10sp"
                                    android:text="00/00/0000"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/red_500" />

                                <TextView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:layout_marginTop="10sp"
                                    android:layout_marginBottom="10sp"
                                    android:text="  -  "
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/red_500" />

                                <TextView
                                    android:id="@+id/tanggal2"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:layout_marginTop="10sp"
                                    android:layout_marginBottom="10sp"
                                    android:text="00/00/0000"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/red_500"
                                    />
                            </LinearLayout>
                            <ImageButton
                            android:id="@+id/removeitem"
                            android:layout_gravity="center"
                            android:layout_width="30sp"
                            android:background="@drawable/cancelred"
                            android:layout_height="30sp" />
                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:layout_height="wrap_content"
                                android:text="Gaji"
                                android:textAlignment="textStart"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/gajikerjahari"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:textAlignment="textEnd"
                                android:layout_height="wrap_content"
                                android:text="0.00"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/grey_60" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"

                                android:paddingLeft="@dimen/spacing_middle"
                                android:layout_height="wrap_content"
                                android:text="Makan"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/nilaimakan"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:textAlignment="textEnd"
                                android:layout_height="wrap_content"
                                android:text="0.00"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/grey_60" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"

                                android:paddingLeft="@dimen/spacing_middle"
                                android:layout_height="wrap_content"
                                android:text="Transport"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/nilaitransport"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:textAlignment="textEnd"
                                android:layout_height="wrap_content"
                                android:text="0.00"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/grey_60" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"

                                android:paddingLeft="@dimen/spacing_middle"
                                android:layout_height="wrap_content"
                                android:text="Potongan"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/nilaipotongan"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:textAlignment="textEnd"
                                android:layout_height="wrap_content"
                                android:text="0.00"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/grey_60" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:layout_height="wrap_content"
                                android:text="BPJS"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/nilaibpjs"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:textAlignment="textEnd"
                                android:layout_height="wrap_content"
                                android:text="0.00"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/grey_60" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:layout_height="wrap_content"
                                android:text="Tunjangan"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/nilaitunjangan"
                                android:textAlignment="textEnd"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:layout_height="wrap_content"
                                android:text="0.00"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/grey_60" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:layout_height="wrap_content"
                                android:text="Tunjangan Lain"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/nilaitunjanganlain"
                                android:textAlignment="textEnd"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:layout_height="wrap_content"
                                android:text="0.00"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/grey_60" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:layout_height="wrap_content"
                                android:text="Punishment"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/nilaipunishment"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:textAlignment="textEnd"
                                android:layout_height="wrap_content"
                                android:text="0.00"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/grey_60" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:layout_height="wrap_content"
                                android:text="Reward"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/nilaireward"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:textAlignment="textEnd"
                                android:layout_height="wrap_content"
                                android:text="0.00"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/grey_60" />
                        </LinearLayout>
                        <View
                            android:layout_marginTop="10sp"
                            android:layout_width="match_parent"
                            android:background="@color/overlay_dark_90"
                            android:layout_height="1sp"></View>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:layout_height="wrap_content"
                                android:text="Total (Bersih)"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/nilaigajibersih"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:textAlignment="textEnd"
                                android:layout_height="wrap_content"
                                android:text="0.00"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/grey_60" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


    </FrameLayout>



</android.support.v7.widget.CardView>
