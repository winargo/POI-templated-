                            android:layout_height="@dimen/dropdown"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_marginTop="8dp"
                            android:tint="@color/grey_60"
                            app:srcCompat="@drawable/ic_expand_arrow" />
                    </LinearLayout>
                </LinearLayout>
